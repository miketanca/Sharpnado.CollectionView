<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="MauiSample.Presentation.Views.SillyGridCell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MauiSample.Presentation.ViewModels"
    x:DataType="viewModels:SillyDudeVmo"
    Stroke="{StaticResource DarkCardBorder}"
    StrokeThickness="2">
    <Image
        Aspect="AspectFill"
        HeightRequest="70"
        HorizontalOptions="Center"
        Source="{Binding ImageUrl}"
        Style="{StaticResource Avatar}"
        VerticalOptions="Center"
        WidthRequest="70">
        <Image.Clip>
            <EllipseGeometry
                Center="35,35"
                RadiusX="35"
                RadiusY="35" />
        </Image.Clip>

    </Image>
</Border>